<div class="container">
  <div class="row justify-content-center mb-5">
    <div class="col-lg-6">
      <%= form_with model: @user do |f| %>
        <div class="review_area" id="review_area">
          <div class="tabs_content_wrap">

            <div class="row align-items-center form_group  mb_50">
              <div class="edit-heading">Profile Photo</div>
              <div class="d-flex mt-5">
                <%= image_tag("template/avatar1.png", class: 'rounded-circle') %>
                <button class="ml-14 btn-profile-pic edit-upload"><%= image_tag("template/upload.svg", class: "mr-2") %>
                  Upload New Picture
                </button>
                <button class="ml-24 btn-profile-pic edit-upload"><%= image_tag("template/edit-delete.svg", class: "mr-2") %>
                  Delete Picture
                </button>
              </div>
            </div>
            <hr class="edit-separator">
            <div class="row align-items-center form_group  mb_50">
              <div class="edit-heading mb-5 mt-4">Details</div>
              <%= f.label :name, "Username", class: 'col-lg-5 edit-label' %>
              <%= f.text_field :name, class: "col-lg-7 edit-text-field", value: current_user.first_name.titleize %>
            </div>
            <hr class="edit-separator">

            <div class="edit-heading mb-5 mt-4">Password</div>
            <div class="row align-items-center form_group  mb_50">
              <%= f.label :name, "Old Password", class: 'col-lg-5 edit-label' %>
              <%= f.text_field :name, class: "col-lg-7 edit-text-field", placeholder: "Enter Old Password", type: "text" %>
            </div>
            <div class="row align-items-center form_group  mb_50">
              <%= f.label :name, "New Password", class: 'col-lg-5 edit-label' %>
              <%= f.text_field :name, class: "col-lg-7 edit-text-field", placeholder: "Enter New Password", type: "text" %>
            </div>
            <hr class="edit-separator">
            <div class="row align-items-center form_group  mb_50">
              <div class="edit-heading mb-5 mt-4">Account</div>
              <%= f.label :name, "Delete Account", class: 'col-5 edit-label' %>
              <button class="btn-profile-pic edit-upload w-auto p-19">
                Delete Account
              </button>
            </div>
            <hr class="edit-separator  mb_50">
            <div class="row align-items-center form_group">
              <button class="w-auto edit-save p-19">
                Save Changes
              </button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
