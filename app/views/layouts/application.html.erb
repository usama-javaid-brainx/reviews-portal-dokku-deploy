  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

  <%= yield(:head_content) if content_for?(:head_content) %>
  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDwFbLw7Yc1hLAOvQAWbd48XdvtNhieq5Y&libraries=places"
    async=""
    defer=""
  ></script>

  <%= favicon_link_tag asset_path('template/smallsite-logo.svg') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>
</head>

<body aria-colcount="position-relative" data-bs-spy="scroll" data-bs-target="#add-restaurant-review-nav" data-bs-offset="190" tabindex="0">

<!-- Preloader Start -->
<div id="preloader" class="d-none">
  <div class="loader3">
    <span></span>
    <span></span>
  </div>
</div>
<!-- Preloader End -->

<% if user_signed_in? %>
  <%= render "shared/header" %>
<% end %>

<%= render 'shared/flash_messages' %>
<%= yield %>
<%= javascript_include_tag 'dashboard' %>
</body>

