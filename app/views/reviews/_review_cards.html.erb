<div class="content_area">
  <div class="content_wrap pb_100">
    <div class="container">
      <div class="tab-content" id="layoutTabContent">
        <!--All grid card here -->
        <div class="tab-pane fade show active" id="gridLayout" role="tabpanel" aria-labelledby="gridLayout-tab">
          <div class="row g-5" id="groups-reviews">
            <%= render partial: 'reviews/grid_review_card', collection: reviews, as: :review %>
          </div>
        </div>
        <!--All list card here -->
        <div class="tab-pane fade" id="grid_layout1" role="tabpanel">
          <div class="row g-5" id="reviews">
            <%= render partial: 'shared/list_review_card', collection: reviews, as: :review %>
          </div>
        </div>
      </div>
    </div>
    <div class="my-5 d-flex justify-content-center" id="next_link">
      <%= button_to "Load More", pagy_url_for(@pagy, @pagy.next), class: "btn btn-primary" %>
    </div>
  </div>
</div>