<div class="container">
  <div class="settings">
    <%= form_with(method: :GET, local: true) do |form| %>
      <h3 class="settings-title">
        Settings
      </h3>
      <div class="view-settings-wrapper">
        <h3 class="settings-subtitle">View</h3>
        <ul class="active-list category-list">
          <li class="drag-field category-list-item row">
            <span class="category-name col-9">Change view</span>
            <div class="col-3 mode-switch d-flex flex-row justify-content-between align-items-center">
              <%= form.check_box :second_view, id: 'setting-switch', checked: current_user.second_view? %>
              <label for="setting-switch"></label>
            </div>
          </li>
          <%= form.submit "Save Changes", class: 'save-changes d-block ms-auto' %>
        </ul>
      </div>
    <% end %>
  </div>
</div>