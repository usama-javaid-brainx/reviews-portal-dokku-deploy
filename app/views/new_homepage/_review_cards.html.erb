<div class="content_area">
  <div class="content_wrap pb_100">
    <div class="container mt_30">
      <div class="tab-content">
        <!--All grid card here -->
        <div class="tab-pane fade show active" id="gridLayout" role="tabpanel" aria-labelledby="gridLayout-tab">
          <div class="row g-5">
            <%= render partial: 'new_homepage/grid_single_review_card', collection: reviews, as: :review %>
          </div>
        </div>
        <!--All list card here -->
        <div class="tab-pane fade" id="listLayout" role="tabpanel" aria-labelledby="listLayout-tab">
          <div class="row g-5">
            <%= render partial: 'shared/list_review_card', collection: reviews, as: :review %>
          </div>
        </div>
      </div>
    </div>
    <div class="my-5 d-flex justify-content-center">
      <% if params[:controller] == "reviews" %>
        <% if current_user.reviews.count <= @reviews.count %>
          <% flash.notice = 'All the reviews has been showed' %>
          <%= link_to "Load More", homepage_path(limit: @limit), class: "btn btn-primary disabled", :disabled => true %>
        <% else %>
          <%= link_to "Load More", homepage_path(limit: @limit += 12), class: "btn btn-primary" %>
        <% end %>
      <% elsif params[:controller] == "groups" %>
        <% if current_user.groups.find(params[:id]).reviews.count <= @reviews.count %>
          <% flash.notice = 'All the reviews has been showed' %>
          <%= link_to "Load More", group_path(id: params[:id], limit: @limit), class: "btn btn-primary disabled", :disabled => true %>
        <% else %>
          <%= link_to "Load More", group_path(id: params[:id], limit: @limit += 12), class: "btn btn-primary" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
