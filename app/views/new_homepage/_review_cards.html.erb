<div class="content_area" data-simplebar>
  <div class="content_wrap pb_100">
    <div class="container mt_30">
      <div class="tab-content">
        <!--All grid card here -->
        <div class="tab-pane fade show active" id="grid_layout1" role="tabpanel">
          <div class="row g-5" id="reviews">
            <%= render partial: 'new_homepage/single_review_card', collection: reviews, as: :review %>
