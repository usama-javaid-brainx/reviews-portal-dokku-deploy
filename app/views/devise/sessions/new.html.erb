<div class="session-container">

  <div class="w-100 text-center mt-5"><%= image_tag('template/fullsite-logo.svg') %></div>  
  <div class="col-xl-4 col-lg-5 col-md-7 col-sm-10 col-12 mx-auto form-container">
    <div class="form-card">
      <h2 class="h1 text-center">Log In</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group mt-4">
          <%= f.label :email, "Email" %>
          <%= f.email_field :email, required: true, label: 'Email', autofocus: true, placeholder: 'Enter your email', class: 'form-control' %>
        </div>
        <div class="form-group mt-4 input-container" data-controller="toggle-password">
          <%= f.label :password, "Password" %>
          <%= f.password_field :password, required: true, autocomplete: "off", placeholder: 'Enter your password', class: 'form-control icon-attached', 'data-toggle-password-target': "password"  %>
          <i class="fa fa-eye input-password-icon" data-toggle-password-target="toggleIcon" data-action="click->toggle-password#togglePassword"></i>
        </div>
        <div class="form-group text-center">
          <%= f.submit "Log in", class: "btn btn-primary d-block w-100 mt-5 mb-4" %>
        </div>
      <% end %>
      <div class="text-center mt-4 devise-links">

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot password?", new_password_path(resource_name), class: 'session-link w-50' %>
        <% end -%>

        <span class="divider"></span>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: 'session-link w-50' %>
        <% end -%>

      </div>
    </div>
  </div>


</div>