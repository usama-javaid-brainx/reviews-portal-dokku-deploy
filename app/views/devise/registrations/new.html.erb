<div class="session-container">
  <div class="col-xl-4 col-lg-5 col-md-7 col-sm-10 mx-auto">
    <div class="form-card">
      <h4 class=" text-center">Sign Up</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group mt-4">
          <%= f.text_field :first_name, placeholder: 'First Name', autofocus: false, class: 'form-control mt-2', required: true %>
        </div>
        <div class="form-group mt-4">
          <%= f.text_field :last_name, placeholder: 'Last Name', autofocus: false, class: 'form-control mt-2', required: true %>
        </div>
        <div class="form-group mt-4">
          <%= f.text_field :phone_number, placeholder: 'Phone Number', autofocus: false, class: 'form-control mt-2', required: true %>
        </div>
        <div class="form-group mt-4">
          <%= f.email_field :email, placeholder: 'Email', autofocus: false, class: 'form-control mt-2', required: true %>
        </div>

        <div class="form-group mt-4">
          <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control mt-2', required: true %>
        </div>

        <div class="form-group mt-4">
          <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', autocomplete: "off", class: 'form-control mt-2', required: true %>
        </div>
        <div class="text-center">
          <%= f.submit "Sign up", class: "submit-button border-0 mt-4 mb-4" %>
        </div>
      <% end %>
      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
