<div class="col-lg-3 col-md-6">
  <div class="group-card">
    <%= link_to group_path(group) do %>
      <%= group.reviews.pluck(:images).flatten.each do |image| %>
        <%# debugger %>
        <img class="group-image" href="<%= image %>">
      <% end %>
      <%= image_tag("template/card-placeholder.svg", class: "group-image") %>
      <h3 class="mx-3 mt-3"><%= group.name %></h3>
      <span class="d-block mx-3"><%= group.reviews.count %> Reviews</span>
    <% end %>
  </div>
</div>