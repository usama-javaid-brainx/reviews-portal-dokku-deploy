<main class="container overflow-hidden" data-controller="group" data-group-search-value="<%= groups_search_path %>" data-group-newgroup-value="<%= edit_new_path %>">
  <%= link_to groups_path do %>
    <span class="back grp-back"><%= image_tag("template/left-arrow.svg")%></span>
  <% end %>
  <%= render "shared/profile_image" %>
  <span class="user-name d-flex justify-content-center profile-name mt-3"><%= @group.name.titleize %></span>
  <div class="row justify-content-center pt_30" data-controller="guest">
    <button type="button" class="col-lg-1 col-md-3 col-8 grp-btn share-grp-btn mx-2" data-bs-toggle="modal" data-bs-target="#shareModal" data-action="click->guest#addLinkField">
      <%= image_tag("template/share.svg") %><span class="mx-2">Share</span>
    </button>
    <button class='col-lg-1 col-md-3 col-8 mt-3 mt-md-0 grp-btn edit-grp-btn mx-2' data-groupId="<%= @group.id %>" data-action="click->group#newRequest">
      <%= image_tag("template/edit.svg") %><span class="mx-2">Edit</span>
    </button>
    <%= link_to "Delete", group_path(@group), data: { turbo_method: :delete }, class: "grp-btn delete col-lg-1 col-md-3 col-8 mt-3 mt-md-0 btn mx-2" %>
    <%= render "shared/share_modal" %>
  </div>
  <%= render "new_homepage/review_cards", reviews: @reviews, pagy: @pagy %>
  <div id="groupModalAppend"></div>
</main>
