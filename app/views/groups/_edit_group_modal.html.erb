<!--Edit group Modal -->
<div class="modal fade" id="edit-group-modal" tabindex="-1" aria-labelledby="edit-group-modal-label" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="edit-group-modal-label">Add Folder</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_for @group, url: groups_path do |group_frm| %>
        <div class="modal-body">
          <div class="mb-4">
            <%= group_frm.label :name, "Name", class: "form-label" %>
            <%= group_frm.text_field :name, class: "form-control input-height", placeholder: "Name your folder", type: "text" %>
          </div>
          <div class="mb-4">
            <%= group_frm.label "Add Reviews", class: "form-label" %>
            <%#= group_frm.text_field :search, class: "form-control input-height", placeholder: "Search for reviews", type: "text", data: { "action": "keyup->group#search" } %>
          </div>
          <div>
            <%= render "modal_review_cards", reviews: @reviews %>
          </div>
        </div>
        <div class="modal-footer justify-content-between">
          <div>
          <button type="button" class="btn white modal-cancel" data-bs-dismiss="modal">Cancel</button>
          <%#= link_to "Delete", group_path(group), data: { turbo_method: :delete }, class: "btn delete" %>
          </div>
            <%= group_frm.submit "Save Changes", class: 'save-changes', "data-action": "click->group#reviews" %>
        </div>
      <% end %>
    </div>
  </div>
</div>