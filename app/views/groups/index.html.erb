<main class="container overflow-hidden" data-controller="group" data-group-search-value="<%= groups_search_path %>" data-group-newgroup-value="<%= edit_new_path %>">
  <%= render "shared/profile_image" %>
  <span class="user-name d-flex justify-content-center profile-name mt-3"><%= current_user.username %></span>
  <div class="row justify-content-center pt_30">
    <button class='col-lg-2 col-md-3 col-8 mt-3 mt-md-0 btn mx-2 grp-btn' data-bs-target="#groupModal" data-action="click->group#newRequest">
      <%= image_tag("template/plus.svg") %><span>Add New</span>
    </button>
  </div>
  <%= render "group_cards", groups: @groups %>
  <div id="groupModalAppend"></div>
</main>