<h2>Localization</h2>
<div class="tabs_content_wrap">

  <ul class="nav nav-tabs d-flex" role="tablist">
    <li><a class="active" href="#enterManually" data-bs-toggle="tab" aria-selected="true">Enter manually</a></li>
    <li><a href="#google_map" data-bs-toggle="tab" aria-selected="false">Search on the map</a></li>
  </ul>

  <div class="tab-content">
    <!-- enterManually tab -->
    <div class="tab-pane fade show active" id="enterManually">
      <div class="form_wrap">
        <form class="enterManually_form">
          <div class="row align-items-center form_group">
            <div class="col-lg-5">
              <label for="">Country</label>
            </div>
            <div class="col-lg-7">
              <select name="" id="">
                <option value="">USA</option>
                <option value="">Belize</option>
                <option value="">Japan</option>
                <option value="">Brazil</option>
              </select>
            </div>
          </div>
          <div class="row align-items-center form_group">
            <div class="col-lg-5">
              <label for="">State</label>
            </div>
            <div class="col-lg-7">
              <input type="text" value="Nashivlle">
            </div>
          </div>
          <div class="row align-items-center form_group">
            <div class="col-lg-5">
              <label for="">City</label>
            </div>
            <div class="col-lg-7">
              <input type="text" value="Nashivlle">
            </div>
          </div>
          <div class="row align-items-center form_group">
            <div class="col-lg-5">
              <label for="">Address</label>
            </div>
            <div class="col-lg-7">
              <input type="text" value="700 Taylor St">
            </div>
          </div>
          <div class="row align-items-center zipCode">
            <div class="col-lg-5">
              <label for="">Zip Code</label>
            </div>
            <div class="col-lg-7">
              <input type="text" value="TN 37208">
            </div>
          </div>
        </form>
      </div>
    </div>
    <!-- google_map tab -->
    <div class="tab-pane fade position-relative" id="google_map">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d26360909.888257876!2d-113.74875964478716!3d36.242299409623534!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x54eab584e432360b%3A0x1c3bb99243deb742!2sUnited%20States!5e0!3m2!1sen!2sbd!4v1656912801550!5m2!1sen!2sbd"
        width="100%" height="342px" style="border:0;" allowfullscreen="" loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
      <form class="location_search_form">
        <input type="text" placeholder="Where are you looking for...">
        <button><%= image_tag("template/search.png") %></button>
      </form>
    </div>
  </div>
</div>