<div>
  <div class="col-xl-4 col-lg-5 col-md-7 col-sm-10 mt-4 mx-auto">
    <div class="form-card border-gray">
      <%= form_for(restaurant, url: restaurants_path) do |f| %>
        <div class="form-group mt-4">
          <%= f.label "Restaurant Name" %><br/>
          <%= f.text_field :name, autofocus: true, placeholder: 'Name', class: 'mt-2 form-control' %>
        </div>
        <div class="form-group mt-4">
          <%= f.label "Country" %><br/>
          <%= f.text_field :country, label: 'Restaurant Name', autofocus: true, placeholder: 'Country', class: 'mt-2 form-control' %>
        </div>
        <div class="form-group mt-4">
          <%= f.label "City" %><br/>
          <%= f.text_field :city, label: 'Restaurant Name', autofocus: true, placeholder: 'City', class: 'mt-2 form-control' %>
        </div>
        <div class="form-group mt-4">
          <%= f.label "Attachments" %><br/>
          <%= f.file_field :images, label: 'Restaurant Name', class: 'mt-2 form-control', multiple: true %>
        </div>
        <div class="form-group mt-4">
          <%= f.label "Cuisine" %><br/>
          <%= f.text_field :cuisine, label: 'Restaurant Name', autofocus: true, placeholder: 'Cuisine', class: 'mt-2 form-control' %>
        </div>
        <div class="form-group mt-4">
          <%= f.label "Favorite Dish" %><br/>
          <%= f.text_field :favorite_dish, label: 'Restaurant Name', autofocus: true, placeholder: 'Dish Name', class: 'mt-2 form-control' %>
        </div>
        <div class="text-center">
          <%= f.submit "Add Restaurant", class: "submit-button border-0 mt-4 mb-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>