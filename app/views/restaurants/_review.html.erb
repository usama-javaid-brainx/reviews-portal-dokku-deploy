<h2>Review</h2>
<div class="tabs_content_wrap">

  <div class="form_group row align-items-center">
    <label for="search" class="col-lg-5">Resturant</label>

    <input class="col-lg-7" id="search" type="text" placeholder="Search a location" autofocus
           data-action="keydown->places#keydown"
           data-places-target="field"/>
  </div>


  <div class="row align-items-center form_group">
    <%= f.label :name, "Restaurant Name", class: 'col-lg-5' %>
    <%= f.text_field :name, class: "col-lg-7", placeholder: "Enter restaurant name", type: "text", id: "search", 'data-places-target': "name" %>
  </div>


  <div class="row align-items-center form_group">
    <%= f.label :cuisine, "Cuisine", class: 'col-lg-5' %>
    <%= f.text_field :cuisine, class: "col-lg-7", placeholder: "Enter cuisine", type: "text" %>
  </div>

  <div class="form_group align-items-center row">
    <%= f.label "Score", class: "col-lg-5" %>
    <%= f.number_field :average_score, placeholder: 'Score', class: 'col-lg-7', step: "0.01", max: "10" %>
  </div>

  <div class="row form_group" data-controller="dollar-price-range">
    <%= f.label :price_range, 'Price range', class: 'indent col-lg-5' %>
    <div class="rating d-flex col-lg-7 p-0" data-dollar-price-range-target="dollar">
      <span data-action="" class="radio-button"><%= f.radio_button :price_range, '1' %></span>
      <span class="radio-button"><%= f.radio_button :price_range, '2' %></span>
      <span class="radio-button"><%= f.radio_button :price_range, '3' %></span>
      <span class="radio-button"><%= f.radio_button :price_range, '4' %></span>
      <span class="radio-button"><%= f.radio_button :price_range, '5' %></span>
    </div>
  </div>

  <div class="row form_group">
    <%= f.label :notes, "Review Body", class: 'col-lg-5' %>
    <%= f.text_area :notes, placeholder: "Write your reviews...", type: "text", class: 'col-lg-7', cols: '30', rows: '5' %>
  </div>

</div>