<div>
  <div class="col-xl-5 col-lg-6 col-md-7 col-sm-10 mt-4 mx-auto">
    <div class="form-card border-gray"
         data-controller="places"
         data-places-latitude-value="<%= @restaurant.latitude %>"
         data-places-longitude-value="<%= @restaurant.longitude %>"
         data-places-place-id-value="<%= @restaurant.place_id %>"
    >
      <div class="d-flex justify-content-end">
        <div class="btn-group" role="group" aria-label="Basic example">
          <a href="<%= edit_restaurant_path(@restaurant) %>" type="button" class="btn btn-outline-primary">Edit</a>
          <a href="<%= restaurant_path(@restaurant) %>" type="button" class="btn btn-outline-primary"
             data-turbo-method="delete" data-turbo-confirm="Are you sure to delete?">Delete</a>
        </div>
      </div>
      <div class="mt-2 row">
        <div class="col-4 mt-2">
          Restaurant Name
        </div>
        <div class="col-8">
          <input class="form-control w-100" value="<%= @restaurant.name %>" disabled>
        </div>
      </div>
      <div class="p-4">
        <div data-places-target="map" style="height:400px;width:400px"></div>
      </div>
      <div class="mt-4 row">
        <div class="col-4 mt-2">
          Address
        </div>
        <div class="col-8">
          <input class="form-control w-100" value="<%= @restaurant.address %>" disabled>
        </div>
      </div>
      <div class="mt-4 row">
        <div class="col-4 mt-2">
          City
        </div>
        <div class="col-8">
          <input class="form-control w-100" value="<%= @restaurant.city %>" disabled>
        </div>
      </div>
      <div class="mt-4 row">
        <div class="col-4 mt-2">
          Country
        </div>
        <div class="col-8">
          <input class="form-control w-100" value="<%= @restaurant.country %>" disabled>
        </div>
      </div>
      <div class="mt-4 row">
        <div class="col-4 mt-2">
          Cuisine
        </div>
        <div class="col-8">
          <input class="form-control w-100" value="<%= @restaurant.cuisine %>" disabled>
        </div>
      </div>
      <div class="mt-4 row">
        <div class="col-4 mt-2">
          Favorite Dish
        </div>
        <div class="col-8">
          <input class="form-control w-100" value="<%= @restaurant.favorite_dish %>" disabled>
        </div>
      </div>
      <div class="mt-4">
        <%= label_tag "Attachments" %><br/>
        <div class="ml-20 d-flex flex-row flex-wrap" id="gallery">
          <% @restaurant.images.each do |attachment| %>
            <div class="d-flex flex-column" id="<%= dom_id(attachment) %>">
              <a class="gallery-image" href="<%= Rails.application.routes.url_helpers.rails_blob_path(attachment) %>" target="_blank"
                 data-pswp-width="<%= attachment.metadata[:width] %>"
                 data-pswp-height="<%= attachment.metadata[:height] %>">
                <%= image_tag attachment, class: 'attachments-img' %>
              </a>
              <%= link_to 'Remove', delete_attachment_restaurant_path(@restaurant.id, attachment_id: attachment.id),
                          data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure, you want to delete?' } %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="mt-4 row">
        <div class="col-4 mt-2">
          Average_score
        </div>
        <div class="col-8">
          <input class="form-control w-100" value="<%= @restaurant.average_score.present? ? '%.2f' % @restaurant.average_score : 0.00 %>" disabled>
        </div>
      </div>
      <div class="mt-4 row">
        <div class="col-4 mt-2">
          Notes
        </div>
        <div class="col-8">
          <input class="form-control w-100" value="<%= @restaurant.notes %>" disabled>
        </div>
      </div>
      <div class="mt-4 row">
        <div class="col-4 mt-2">
          Google Map Link
        </div>
        <div class="col-8">
          <%= link_to @restaurant.google_maps_link, @restaurant.google_maps_link, class: "form-control w-100", target: '_blank' %>
        </div>
      </div>
      <div class="mt-4 row">
        <div class="col-4 mt-2">
          Date
        </div>
        <div class="col-8">
          <input class="form-control w-100" value="<%= @restaurant.date %>" disabled>
        </div>
      </div>
      <div>
        <h3 class="mt-3">Reviews (<span class="gig-rating text-body-2">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1792 1792" width="15" height="15">
                                    <path
                                      fill="currentColor"
                                      d="M1728 647q0 22-26 48l-363 354 86 500q1 7 1 20 0 21-10.5 35.5t-30.5 14.5q-19 0-40-12l-449-236-449 236q-22 12-40 12-21 0-31.5-14.5t-10.5-35.5q0-6 2-20l86-500-364-354q-25-27-25-48 0-37 56-46l502-73 225-455q19-41 49-41t49 41l225 455 502 73q56 9 56 46z"
                                    ></path>
                                </svg>
                                <span data-places-target="rating"></span>
                            </span>)
        </h3>
        <div class="review-list" data-places-target="reviews">
        </div>
      </div>
    </div>
  </div>
</div>