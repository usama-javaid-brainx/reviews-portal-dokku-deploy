<main class="overflow-hidden">
  <%= render "filter_navbar" %>

  <div class="content_area" data-simplebar>
    <div class="content_wrap pb_100">
      <div class="container">
        <div class="tab-content">
          <!--All grid card here -->
          <div class="tab-pane fade show active" id="grid_layout1" role="tabpanel">
            <div class="row g-5">
              <% @restaurants.each do |resturant| %>
                <%= render 'resturant_card', resturant: resturant %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="pagy my-5 d-flex justify-content-center">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </div>


  <!-- add Button -->
  <%= link_to new_restaurant_path, class: 'addNew' do %>
    <%= image_tag("template/plus.png") %><span>Add New</span>
  <% end %>
</main>
