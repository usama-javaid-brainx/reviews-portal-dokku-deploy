<%#= render 'form', restaurant: @restaurant %>
<main class="position-relative">
  <a class="back" href="#"><%= image_tag("template/left-arrow.png") %></a>
  <div class="add_review_area pt_30">
    <!-- page header start-->
    <div class="add_review_area_header sticky-top">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-6">

            <h2 class="title">Add restaurant review</h2>
            <!-- add restaurant review nav start -->
            <ul class="nav nav-pills" id="add-restaurant-review-nav">
              <li class="nav-item">
                <a href="#review_area" class="nav-link active">Review</a>
              </li>
              <li class="nav-item">
                <a href="#photo_area" class="nav-link">Photos</a>
              </li>
              <li class="nav-item">
                <a href="#localization_area" class="nav-link">Localization</a>
              </li>
              <li class="nav-item">
                <a href="#tags_area" class="nav-link">Tags</a>
              </li>
              <li class="nav-item">
                <a href="#favourite_dishes_area" class="nav-link">Favourite dishes</a>
              </li>
            </ul>
            <!-- add restaurant review nav end -->
          </div>
        </div>
      </div>
    </div>
    <!-- page header end-->

    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <!-- review area start -->
          <div class="review_area pt_30" id="review_area">
            <div class="row">
              <div class="col-lg-9">
                <%= render 'review' %>
              </div>
            </div>
          </div>

          <!-- photo area start -->
          <div class="photo_area pt_30" id="photo_area">
            <%= render 'photos' %>
          </div>

          <!-- localization area start -->
          <div class="localization_area pt_30" id="localization_area">
            <%= render 'localization' %>
          </div>

          <!-- tags area start -->
          <div class="tags_area pt_30" id="tags_area">
            <%= render 'tags' %>
          </div>

          <!-- Favourite dishes area start -->
          <div class="pt_30" id="favourite_dishes_area">
            <h2>Favourite dishes</h2>
            <div class="tabs_content_wrap">
              <div class="favourite_dishes_tab_wrap text-center">
                <h2>No favourites dishes yet</h2>
                <p>Add your favourite dishes</p>
                <a class="btn white" href="#"><span class="icon">+</span><span>Add Meal</span></a>
              </div>
            </div>
          </div>

          <div class="row pt_50 align-items-center">
            <div class="col-3 col-sm-4">
              <a class="btn white cancel" href="#">Cancel</a>
            </div>
            <div class="col-9 col-sm-8 d-flex justify-content-end">
              <div class="public_review">
                <div class="mode-switch d-flex flex-row align-items-center">
                  <input type="checkbox" id="switch"/>
                  <label for="switch"></label>
                </div>
                <%= image_tag('template/icon4.png', class: 'mr_5') %>
                <span>Public REVIEW</span>
              </div>
              <a class="btn white add_review ml_25" href="#">Add Review</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</main>
